/* VS Code workspace settings for Tailwind IntelliSense in a monorepo */
{
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "javascriptreact": "javascript"
  },

  "tailwindCSS.emmetCompletions": true,
  // The extension will auto-discover Tailwind config files in the workspace.
  // If needed, you can set `tailwindCSS.experimental.configFile` to a string path.

  // Help the extension find classes inside helper functions like cn() or clsx()
  "tailwindCSS.experimental.classRegex": [
    "className\\s*=\\s*\\\"([^\\\"]*)\\\"",
    "class\\s*=\\s*{?`([^`]*)`?}",
    "cn\\(([^)]*)\\)",
    "clsx\\(([^)]*)\\)",
    "cva\\s*\\(\\s*`([^`]*)`",
    "cva\\s*\\(\\s*\\\"([^\\\"]*)\\\"",
    "cva\\s*\\(\\s*'([^']*)'",
    // catch cva([...]) and cva([`...`, ...]) array first-arg forms
    "cva\\s*\\(\\s*\\[\\s*`([^`]*)`",
    "cva\\s*\\(\\s*\\[\\s*\\\"([^\\\"]*)\\\"",
    "cva\\s*\\(\\s*\\[\\s*'([^']*)'",
    // catch simple concatenations or template expressions inside cva(...) or clsx/cn
    "cva\\s*\\([^)]*`([^`]*)`[^)]*\\)",
    "cva\\s*\\([^)]*\\\"([^\\\"]*)\\\"[^)]*\\)",
    "\\b[A-Za-z0-9_]+\\s*:\\s*\\\"([^\\\"]*)\\\"",
    "\\b[A-Za-z0-9_]+\\s*:\\s*'([^']*)'"
  ],

  // Ensure the extension scans the UI source files inside the monorepo
  "tailwindCSS.files": [
    "packages/ui/src/**/*.{ts,tsx}",
    "apps/web/**/*.{ts,tsx,js,jsx,html}",
    "packages/**/*.{ts,tsx,js,jsx,html}"
  ],

  // Quick suggestions in strings so completions show up while typing className
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },

  // Keep ESLint working directories auto-detected for monorepo
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ]
}
