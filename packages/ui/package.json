{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build": "pnpm run build:ui && pnpm run build:css",
    "build:css": "pnpm exec tailwindcss -i ./src/styles.css -o ./dist/ui-tw.css --minify --config ./tailwind.config.js",
    "build:ui": "tsup src/index.ts --format cjs,esm --dts --outDir dist",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10",
    "eslint": "^9.34.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "tsup": "^6.7.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  }
}
